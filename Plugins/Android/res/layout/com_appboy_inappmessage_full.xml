<?xml version="1.0" encoding="utf-8"?>

<com.appboy.ui.inappmessage.AppboyInAppMessageFullView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_appboy_inappmessage_full"
    style="@style/Appboy.InAppMessage.Full">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0.0dp"
        android:weightSum="1.0">
        <ImageView
            android:id="@+id/com_appboy_inappmessage_full_image"
            style="@style/Appboy.InAppMessage.Image.Full.Portrait"/>
        <RelativeLayout
            style="@style/Appboy.InAppMessage.Full.TextArea.Portrait">
            <LinearLayout
                android:id="@+id/com_appboy_inappmessage_full_text_layout"
                style="@style/Appboy.InAppMessage.Layout.Text.Full">
                <TextView
                    android:id="@+id/com_appboy_inappmessage_full_header_text"
                    style="@style/Appboy.InAppMessage.Header.Full"/>
                <TextView
                    android:id="@+id/com_appboy_inappmessage_full_message"
                    style="@style/Appboy.InAppMessage.Message.Full"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/com_appboy_inappmessage_full_button_layout"
                style="@style/Appboy.InAppMessage.Layout.Button.Full">
                <Button
                    android:id="@+id/com_appboy_inappmessage_full_button_one"
                    style="@style/Appboy.InAppMessage.Button.Full.One"/>
                <Button
                    android:id="@+id/com_appboy_inappmessage_full_button_two"
                    style="@style/Appboy.InAppMessage.Button.Full.Two"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10.0dp">

        <ImageButton
            android:id="@+id/com_appboy_inappmessage_full_close_button"
            style="@style/Appboy.InAppMessage.CloseButton.Full"/>
    </RelativeLayout>
</com.appboy.ui.inappmessage.AppboyInAppMessageFullView>