<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
  <style name="Appboy"/>

  <style name="Appboy.Button">
    <!-- Overriding the Holo default behavior -->
    <item name="android:minHeight">0.0dp</item>
    <item name="android:minWidth">0.0dp</item>
    <item name="android:textColor">@color/com_appboy_button</item>
  </style>

  <!-- Custom Push Notification View Styles. AppboyGcmReceiver ensures that this is only used for Android versions from
   Honeycomb to Ice Cream Sandwich, so we mark it with targetApi 11 for Lint purposes. -->
  <style name="Appboy.EventContent" tools:targetApi="11">
    <item name="android:textColor">@color/com_appboy_custom_notification_content</item>
    <item name="android:textSize">12dp</item>
  </style>
  <style name="Appboy.EventContent.Title">
    <item name="android:textColor">@color/com_appboy_custom_notification_title</item>
    <item name="android:textSize">16dp</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="Appboy.EventContent.Time">
    <item name="android:textSize">10dp</item>
    <item name="android:textColor">@color/com_appboy_custom_notification_time</item>
  </style>
</resources>